<?xml version="1.0" encoding="utf-8"?>

<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                xmlns:vm="clr-namespace:ICSProj.App.ViewModels"
                xmlns:models="clr-namespace:ICSProj.BL.Models;assembly=ICSProj.BL"
                x:DataType="vm:ProjectListViewModel"
                x:Class="ICSProj.App.Views.Project.ProjectCreationPopupView">
    <Grid Padding="20"
          RowDefinitions="Auto, Auto, Auto">
        <Label Grid.Row="0"
               Text="Create new tag"
               FontSize="18"
               FontAttributes="Bold"
               HorizontalOptions="Center" />
        <Grid Grid.Row="1"
              RowDefinitions="Auto, Auto, Auto"
              ColumnDefinitions="Auto, *">
            <Label Grid.Row="0"
                   Text="Project Name:"
                   VerticalOptions="Center" />
            <Entry Grid.Row="0"
                   Grid.Column="1"
                   Text="{Binding Project.Name}"
                   Placeholder="Enter project name" />
        </Grid>
        <Button Grid.Row="2"
                Text="Add Project"
                HorizontalOptions="End"
                Command="{Binding AddProjectCommand}"
                Clicked="ClosePopup"/>
    </Grid>
</toolkit:Popup>
