<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:views="clr-namespace:ICSProj.App.Views;assembly=ICSProj.App"
                       xmlns:vm="clr-namespace:ICSProj.App.ViewModels;assembly=ICSProj.App"
                       x:Class="ICSProj.App.Views.Activity.ActivityEditView"
                       x:Name="IngredientEditViewRoot"
                       x:DataType="vm:ActivityEditViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" Spacing="30" Margin="55,35,0,0" HorizontalOptions="Start" VerticalOptions="Start">

            <Grid ColumnSpacing="25" RowSpacing="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>

                <Border
                    Grid.Column="0"
                    Grid.Row="0"
                    StrokeShape="RoundRectangle 20,20,20,20"
                    Background="#CC6767"
                    Padding="16,8"
                    HorizontalOptions="Start">
                    <Label Text=" Popis: "
                           TextColor="White"
                           FontFamily="PoppinsExtraLight"
                           HorizontalOptions="Center"
                           FontSize="17"
                           FontAttributes="Bold" />
                </Border>
                <Entry Text="{Binding Activity.Description}"
                       TextColor="#CC6767"
                       Grid.Row="0"
                       Grid.Column="1"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"/>

                <Border
                    Grid.Column="0"
                    Grid.Row="1"
                    StrokeShape="RoundRectangle 20,20,20,20"
                    Background="#CC6767"
                    Padding="16,8"
                    HorizontalOptions="Start">
                    <Label Text=" Od: "
                           TextColor="White"
                           FontFamily="PoppinsExtraLight"
                           HorizontalOptions="Center"
                           FontSize="17"
                           FontAttributes="Bold" />
                </Border>
                <Grid Grid.Row="1"
                      Grid.Column="1"
                      RowDefinitions ="Auto"
                      ColumnDefinitions="Auto, Auto">
                    <TimePicker Grid.Row ="0"
                                Grid.Column="0"
                                VerticalOptions="Center"
                                HorizontalOptions="Center"
                                BackgroundColor="#CC6767"
                                Time="{Binding EditActivity.TimeFrom}"
                                Format="HH:mm"/>
                    <DatePicker Grid.Row ="0"
                                Grid.Column="1"
                                VerticalOptions="Center"
                                HorizontalOptions="Start"
                                BackgroundColor="#CC6767"
                                Date="{Binding EditActivity.DateFrom}"/>
                </Grid>

                <Border
                    Grid.Column="0"
                    Grid.Row="2"
                    StrokeShape="RoundRectangle 20,20,20,20"
                    Background="#CC6767"
                    Padding="16,8"
                    HorizontalOptions="Start">
                    <Label Text=" Do: "
                           TextColor="White"
                           FontFamily="PoppinsExtraLight"
                           HorizontalOptions="Center"
                           FontSize="17"
                           FontAttributes="Bold" />
                </Border>

                <Grid Grid.Row="2"
                      Grid.Column="1"
                      RowDefinitions ="Auto"
                      ColumnDefinitions="Auto, Auto">
                    <TimePicker
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        BackgroundColor="#CC6767"
                        Time="{Binding EditActivity.TimeTo}"
                        Format="HH:mm"/>
                    <DatePicker
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalOptions="Center"
                        HorizontalOptions="Start"
                        BackgroundColor="#CC6767"
                        Date="{Binding EditActivity.DateTo}"/>
                </Grid>

                <Border
                    Grid.Column="0"
                    Grid.Row="3"
                    StrokeShape="RoundRectangle 20,20,20,20"
                    Background="#CC6767"
                    Padding="16,8"
                    HorizontalOptions="Start">
                    <Label Text=" Projekt: "
                           TextColor="White"
                           FontFamily="PoppinsExtraLight"
                           HorizontalOptions="Center"
                           FontSize="17"
                           FontAttributes="Bold" />
                </Border>

                <Picker Grid.Row="3"
                        Grid.Column="1"
                        VerticalOptions="Center"
                        HorizontalOptions="Start"
                        Background="#CC6767"
                        ItemsSource="{Binding Projects}"
                        ItemDisplayBinding="{Binding ., Converter={StaticResource ProjectNameToStringConverter}}"
                        SelectedItem="{Binding EditActivity.Project}"/>

                <Border
                    Grid.Column="0"
                    Grid.Row="4"
                    StrokeShape="RoundRectangle 20,20,20,20"
                    Background="#CC6767"
                    Padding="16,8"
                    HorizontalOptions="Start">
                    <Label Text=" Tag: "
                           TextColor="White"
                           FontFamily="PoppinsExtraLight"
                           HorizontalOptions="Center"
                           FontSize="17"
                           FontAttributes="Bold" />
                </Border>

                <Picker Grid.Row="4"
                        Grid.Column="1"
                        VerticalOptions="Center"
                        HorizontalOptions="Start"
                        Background="#CC6767"
                        ItemsSource="{Binding Tags}"
                        ItemDisplayBinding="{Binding ., Converter={StaticResource TagNameToStringConverter}}"
                        SelectedItem="{Binding EditActivity.Tag}"/>
            </Grid>
        </StackLayout>

        <Button Grid.Row="1"
                Grid.Column="0"
                Text="UloÅ¾it"
                Margin="55,0,0,30"
                WidthRequest="100"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                TextColor="White"
                FontSize="17"
                BackgroundColor="YellowGreen"
                Command="{Binding SaveCommand}"/>
    </Grid>
</views:ContentPageBase>
